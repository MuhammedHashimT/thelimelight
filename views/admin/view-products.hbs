
<section>
  <div class="row">
    <a href="/admin/add-product" style="width:auto;" class="btn btn-success">Add Products</a>
  </div>
    <div class="container">
        <table class="table">
  <thead>
    <tr>
      
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>

{{#each products}}
    <tr>
     
      
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>
        <img style="height: 50px; width: 50px;" src="/{{ this.image }}" alt="">
      </td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick=return confirm("Did you want to delete {{this.Name}}")>Delete</a>
      </td>
 
    </tr>
{{/each}}

  </tbody>
</table>
    </div>
</section>